{
  "coc.preferences.colorSupport": true,
  "coc.preferences.formatOnSaveFiletypes": ["rust", "csharp"],

  "list.maxPreviewHeight": 30,

  "suggest.triggerCompletionWait": 50,
  "suggest.noselect": false,

  "suggest.enablePreview": true,
  "suggest.detailMaxLength":120,
  "suggest.detailField": "abbr",
  "suggest.echodocSupport": true,
  "suggest.disableMenuShortcut": true,
  "suggest.completionItemKindLabels": {
    "keyword": " [keyword]",
    "variable": "識[variable]",
    "value": "\uf89f [value]",
    "operator": "\u03a8 [operator]",
    "function": " [function]",
    "reference": "\ufa46 [reference]",
    "constant": "識[constant]",
    "method": " [method]",
    "struct": "\ufb44 [struct]",
    "class": "\uf0e8 [class]",
    "interface": "\uf417 [interface]",
    "text": "\ue612 [text]",
    "enum": "\uf435 [enum]",
    "enumMember": "\uf02b [enumMember]",
    "module": "\uf40d [module]",
    "color": "\ue22b [color]",
    "property": " [property]",
    "field": "\uf9be[field]",
    "unit": "\uf475 [unit]",
    "event": "\ufacd [event]",
    "file": "\uf723 [file]",
    "folder": "\uf114 [folder]",
    "snippet": "\ue60b [snippet]",
    "typeParameter": "\uf728 [type]",
    "default": "\uf29c [default]"
  },

  "diagnostic.format": "%message [%source]",
  "diagnostic.enableSign": true,
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": " ",
  "diagnostic.hintSign": " ",
  "diagnostic.messageTarget": "echo",
  "diagnostic.virtualText": true,
  "diagnostic.enableMessage": "always",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualTextPrefix": "  ❮❮  ",
  "diagnostic.separateRelatedInformationAsDiagnostics": true,

  "explorer.icon.enableNerdfont": true,
  "explorer.floating.border.enable": true,
  "explorer.sources": [
    { "name": "buffer", "expand": true },
    { "name": "file", "expand": true }
  ],
  "explorer.floating.width": -40,
  "explorer.floating.height": -20,
  "explorer.floating.border.title": "",
  "explorer.quitOnOpen": true,
  "Lua.diagnostics.globals": ["vim"]
}
